//
// Estilos gerais
// --------------------------------------------------

html
body
    height 100%

body
  background #fff
  height 100%
  font-kerning normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  overflow-x hidden
  font-weight: 400

ul
  font-size 16px
  font-weight 300
  line-height 1.8
  list-style none
  padding 0

.scroll-to-top
  background-color: rgba(0,0,0,.4)
  bottom: 25px
  border-radius 100px
  display: block
  height: 42px
  line-height: 42px
  position: fixed
  right: 25px
  transition: all .5s ease-in-out
  width: 42px
  z-index: 100
  a
    i
      color: #fff
      display: block
      font-size: 24px
      line-height: 38px
      @extend .text-center
    &:hover
    &:active
    &:focus
        text-decoration: none

.vertical-center
  align-items center
  display flex
  flex-direction column
  justify-content center
  min-height: 100%;  /* Fallback for vh unit */
  min-height: 100vh;
  padding 0

