footer
  background-color #e7e7e8
  padding 60px 0 48px

  h5
    font-size 15px
    line-height 1.07
    margin 15px 0 2px 0

  a
    color #87888a
    display block
    font-size 12px
    line-height 1.33

  p
    color #87888a
    font-size 10px
    margin-top 28px
    margin-bottom 0

.footer--last
  margin-top 30px
  text-align center
  @media (min-width: $screen-md-min)
    margin-top 0
    text-align left
