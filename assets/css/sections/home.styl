//
// main social
//

.main-social
  padding-top 13px
  padding-bottom 7px
  text-align center

  @media (min-width: $screen-md-min)
    text-align left

  figure > img
    margin auto
    @media (min-width: $screen-md-min)
      margin 0

  .list-inline
    li
      padding-left 10px
    @media (min-width: $screen-md-min)
      float right
      margin-top: 30px
      margin-bottom 0

  .sprite
    background-image url('../img/sprite-social.png')
    background-repeat no-repeat
    display block
    height 20px
    width 22px

  .sprite.facebook
    background-position -29px -28px
  .sprite.twitter
    background-position -74px -28px
  .sprite.youtube
    background-position -120px -28px
  .sprite.linkedin
    background-position -165px -28px

// news
// ---------
.news
  .blc
    margin-top 30px
    &--roxo
      background-color: #945ea4
    &--azul
      background-color: #24b5bc

    &__content
      display: flex;
      align-items: center
      flex-direction: column
      padding: 13px 0;
      min-height: 220px;
      @media (min-width: $screen-md-min)
        flex-direction: row
    &__titulo > a,
    &__texto
      color: #fff;
    &__titulo
      font-size: 18px
      margin-bottom 10px
      @media (min-width: $screen-md-min)
        margin-bottom 0
      a
        display: flex;
        align-items: center
        font-weight: bold
        transition: all 300ms ease
        opacity 1
        &:hover,
        &:focus
          text-decoration: none
          opacity .8
          img
            transform: scale(1.2)
        img
          margin-right 10px
          transition: all 300ms ease
    &__texto
      font-size: 14px
      font-weight: bold
      line-height: 22px;
      text-align: center
      @media (min-width: $screen-md-min)
        text-align: right

