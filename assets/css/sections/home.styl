//
// main welcome
//

.main-welcome
  align-items: flex-end
  background-image: url('../img/ici/topo.jpg')
  background-size: cover
  background-position: center top
  background-repeat: no-repeat
  height 100vh
  display: flex

.main-welcome__featured-text
  background: url('../img/ici/logo.png') no-repeat center center
  background-size contain
  position relative
  display: flex;
  align-items: center;
  justify-content: center;
  height 600px
  width 100%

  p
    font-size: 12px;
    margin-top 200px
    max-width: 220px;

    @media (min-width: $screen-sm-min)
      font-size: 20px;
      margin-top 270px
      max-width: 370px;
    span
      font-weight: 700

.main-welcome__watch
  color #fff
  font-family 'KonsensBold'
  font-size 18px
  margin-top 23px
  &:active
  &:visited
    color #fff !important

  img
    margin-right 16px

.main-welcome__watch:hover
  color #fff

.main-welcome__watch:focus
  color #fff

.main-welcome__arrow-down
  position absolute
  bottom 110px
  @media (min-width: $screen-sm-min)
    bottom 50px
  img
    height 34px
    width 50px

    @media (min-width: $screen-sm-min)
      height 40px
      width 58px

//
// main sticky menu
//

.main-sticky
  // background-color $brand-primary
  align-items: center;
  background-color #f59b20
  display: flex;
  min-height 92px
  position -moz-sticky
  position -ms-sticky
  position -o-sticky
  position -webkit-sticky
  position sticky
  text-align: center
  top 0
  z-index 300

  p
    font-size 14px
    margin-bottom 0
    @media (min-width: $screen-md-min)
      font-size 22px

  &__text1
    color: #fff
    span
      font-weight: 700

  &__text2
    color #fc0
    font-weight: 700

.main-sticky__button-left
  font-family 'KonsensSemibold'
  margin-top 20px
  padding 9px 26px 7px
  @media (min-width: $screen-sm-min)
    padding 8px 26px

.main-sticky .navbar-default
  background-color #f59b20

.navbar-sticky .nav
  text-align center
  li
    @media (min-width: $screen-sm-min)
      margin-left 7px
    a
      margin-bottom 10px
      @media (min-width: $screen-sm-min)
        margin-bottom 0

.navbar-sticky .nav li:last-child a
  background-color #fff
  color $brand-primary

