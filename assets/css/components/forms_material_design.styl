//
// checkbox settings
//

.checkbox
    padding-left 20px
    label
      display inline-block
      padding-left 5px
      position relative
      &::before
        background-color #fff
        border 2px solid #889096
        border-radius 3px
        content ""
        display inline-block
        height 14px
        left 0
        margin-left -20px
        position absolute
        top 6px
        transition border 0.15s ease-in-out, color 0.15s ease-in-out
        width 14px
      &::after
        color #555555
        display inline-block
        font-size 11px
        height 16px
        left 0
        margin-left -20px
        padding-left 3px
        padding-top 1px
        position absolute
        top 0
        width 16px
    input[type="checkbox"]
      opacity 0
    input[type="checkbox"]:focus
      & + label
        &::before
          outline 5px auto -webkit-focus-ring-color
          outline thin dotted
          outline-offset -2px
    input[type="checkbox"]:checked
      & + label
        &::after
          // content "\f00c"
          background-color #889096
          border-radius 50%
          content " "
          font-family 'FontAwesome'
          height 6px
          left 4px
          top 10px
          width 6px
    input[type="checkbox"]:disabled
      & + label
        opacity 0.65
        &::before
          background-color #eeeeee
          cursor not-allowed
    &.checkbox-circle
      label
        &::before
          border-radius 50%
    &.checkbox-inline
      margin-top 0
