.f-group
  input
  textarea
  select
    background-color transparent
    border-radius 0
    box-shadow none

.f-group
  select
    appearance none

  label
    &.radio
      cursor pointer
      display inline-block
      line-height 37px
      left 0
      margin 10px 0 20px 0
      padding-right 0px
      position relative
      pointer-events auto
      top 0
      &:hover
          .inner-r
              box-sizing initial
              transform scale(0.5)
              opacity .5
      input
          height 1px
          opacity 0
          width 1px
          &:checked + .outer .inner-r
              transform scale(1)
              opacity 1
          &:checked + .outer
              border 2px solid #808285
          &:focus + .outer .inner-r
              background-color #808285
              transform scale(1)
              opacity 1
      .outer
          background-color #fff
          border 2px solid #889096
          border-radius 50%
          box-sizing initial
          display block
          float left
          height 13px
          margin 8px 9px 8px 0px
          width 13px
      .inner-r
          background-color #808285
          border-radius 50%
          display block
          height 7px
          margin 3px
          transform scale(0)
          transition all 0.25s ease-in-out
          opacity 0
          width 7px

.f-group
	position relative
	.f-group-12
	.f-group-6
	.f-group-3
		margin-bottom 35px

	input, textarea, select
		font-size:$form-font-size;
		padding:10px 0 10px 0;
		display:block;
		width:100%;
		border:none;
		color: $form-font-color;
		border-bottom 1px solid $form-font-color

	textarea
		resize:none;
	input:focus, textarea:focus
		outline:none;
	label
		color:$form-font-color;
		font-size:$form-font-size;
		font-weight: 400
		position:absolute;
		pointer-events:none;
		left 15px
		top:6px;
		transition:0.2s ease all;
		// -moz-transition:0.2s ease all;
		// -webkit-transition:0.2s ease all;

	input:focus ~ label, input:valid ~ label, textarea:focus ~ label, textarea:valid ~ label
		top:-15px;
		font-size:$form-font-size-focus;
		color $form-font-color-focus
		font-weight 400
	.bar
		position:relative;
		display:block;
		width:100%;
	.bar:before, .bar:after
		content:'';
		height:2px;
		width:0;
		bottom:0px;
		position:absolute;
		background:$form-font-color-focus;
		transition:0.2s ease all;
		// -moz-transition:0.2s ease all;
		// -webkit-transition:0.2s ease all;
	.bar:before
		left:50%;

	.bar:after
		right:50%;

	//active state
	input:focus ~ .bar:before, input:focus ~ .bar:after, textarea:focus ~ .bar:before, textarea:focus ~ .bar:after
		width:50%;

	//HIGHLIGHTER
	.highlight
		position:absolute;
		height:60%;
		width:100px;
		top:25%;
		left:0;
		pointer-events:none;
		opacity:0.5;

	//active state
	input:focus ~ .highlight, textarea:focus ~ .highlight
		// -webkit-animation:inputHighlighter 0.3s ease;
		// -moz-animation:inputHighlighter 0.3s ease;
		animation:inputHighlighter 0.3s ease;

/* ANIMATIONS ================ */
@-webkit-keyframes inputHighlighter {
	from { background:$form-font-color-focus; }
	to 	{ width:0; background:transparent; }
}
@-moz-keyframes inputHighlighter {
	from { background:$form-font-color-focus; }
	to 	{ width:0; background:transparent; }
}
@keyframes inputHighlighter {
	from { background:$form-font-color-focus; }
	to 	{ width:0; background:transparent; }
}

